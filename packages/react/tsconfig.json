{
  "extends": ["../../tsconfig.json"],
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "outDir": "dist",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
